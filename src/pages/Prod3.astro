---
//imports
import phCurrent from "../../img/trstkills shop/black tee v2.jpg";

//layout
import Mainlayout from "../layouts/Layout.astro";
//js files
import Prod from "../data/ProductData";

interface Props {
  title: string;
  description: string;
  image;
  frontmatter;
  robots;
}

const {
  title = "TrstKills",
  description = "official website of TrstKills",
  image,
  frontmatter,
  robots,
} = Astro.props;
---

<Mainlayout {title} {description} {image} {frontmatter} {robots}>
  <div class="container mx-auto min-h-[75vh] flex justify-center items-center w-full">
    <div class="container relative flex flex-col justify-center items-center my-10 mx-auto">
      <div class="flex relative">
        <img class="myImg" src={phCurrent} alt="img01" width="399" height="389" class="relative" />
        <svg 
          class="bi bi-zoom-in absolute right-4 top-4" 
          xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
          <path d="M10.344 11.742c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1 6.538 6.538 0 0 1-1.398 1.4z"/>
          <path fill-rule="evenodd" d="M6.5 3a.5.5 0 0 1 .5.5V6h2.5a.5.5 0 0 1 0 1H7v2.5a.5.5 0 0 1-1 0V7H3.5a.5.5 0 0 1 0-1H6V3.5a.5.5 0 0 1 .5-.5z"/>
        </svg>
      </div>
      <!-- The Modal -->
      <div id="myModal" class="modal">
        <span class="close">&times;</span>
        <img class="modal-content" id="modalImg" />
        <div id="caption"></div>
      </div>

      <div class="text-left float-left mb-2 mt-10 flex flex-col gap-4">
        <h2 class="text-2xl pl-2 sm:text-3xl md:text-4xl font-bold">{Prod[2]?.title}</h2>
        
        <section id="product_description" class="text-left m-2 text-xl">
          <ul class="pl-6 list-disc">
            <li>Color: Black</li>
            <li>Model: Wearing L size 178cm/72kg</li>
            <li>M size: L/73cm, W/55cm</li>
            <li>L size: L/77cm, W/58cm</li>
            <li>XL size: L/81cm, W/63cm</li>
            <li>Fabric: 100% cotton</li>
          </ul>
        </section>

        <div class="text-left flex items-center gap-2 pl-2">
          <p class="price">{Prod[2]?.price}</p>
          <span class="text-3xl">&euro;</span>
        </div>
        <a
          href="mailto:trstkillsbmx@gmail.com"
          target="_blank"
          role="link"
          class="w-80 mx-auto my-2"
          >
          <button class="bg-indigo-600 text-white w-64 h-14 rounded-xl hover:bg-indigo-500 transition-all duration-300" style="box-shadow: 0 15px 30px -5px rgba(79, 70, 229, 0.6);">
            <span class="font-2xl sm:font-3xl md:font-4xl">Pre-Order</span>
          </button>
        </a>
      </div>
    </div>
  </div>
</Mainlayout>

<script>
  import "../utils/ModalPh.js";
</script>
