---
import Layout from '../layouts/Layout.astro'
import Navbar from '../components/Navbar.astro'

const {
  title = "My Astro Blog",
  description = "My musings about the Astro framework",
  image,
  frontmatter,
  robots,
} = Astro.props;
---


<Layout {title} {description} {image} {frontmatter} {robots}>
  <div class="container mx-auto"
    style={{
      display: "grid",
      placeItems: "center",
      textAlign: "center",
      gap: "var(--space-sm)",
    }} >
    <div class="container w-full min-h-screen flex flex-col justify-center items-center gap-12">
      <div class="first">
        <h1 class="h1 text-3xl sm:text-4xl md:text-5xl font-bold">404 error: Pages not found!</h1>
      </div>
      <div class="end">
        <h1 class="h1 text-3xl sm:text-4xl md:text-5xl">Welp, something gone wrong!</h1>
        <p class="h1 text-3xl sm:text-4xl md:text-5xl">turn back or go rightâ€¦</p>

        <a href="/" class="grid place-content-center min-h-[150px]">
          <button class="flex gap-2 text-2xl sm:text-3xl md:text-4xl border border-gray-200 py-5 px-4 rounded-md uppercase">
            <div class="flex flex-row justify-center items-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="30" fill="currentColor" class="bi bi-caret-left m-0 max-w-[12px] scale-[1.6] -translate-y-1" viewBox="0 0 16 16">
                <path d="M10 12.796V3.204L4.519 8 10 12.796zm-.659.753-5.48-4.796a1 1 0 0 1 0-1.506l5.48-4.796A1 1 0 0 1 11 3.204v9.592a1 1 0 0 1-1.659.753z"/>
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="30" fill="currentColor" class="bi bi-caret-left m-0 max-w-[12px] scale-[1.6] -translate-y-1" viewBox="0 0 16 16">
                <path d="M10 12.796V3.204L4.519 8 10 12.796zm-.659.753-5.48-4.796a1 1 0 0 1 0-1.506l5.48-4.796A1 1 0 0 1 11 3.204v9.592a1 1 0 0 1-1.659.753z"/>
              </svg> 
            </div> 
            <span class="translate-y-[1.2px]">turn back</span>
          </button>
        </a>
      </div>
    </div>
</MainLayout>
