      <ul
        class="flex justify-around w-full items-center max-w-[1000px] mt-4 mx-auto flex-wrap"
      >
        <li class="font-condensed">
          <a
            href="./pages/index.astro"
            class="text-2xl sm:text-3xl md:text-[48px]">HOME</a
          >
